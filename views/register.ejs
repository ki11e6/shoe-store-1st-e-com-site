<!DOCTYPE html>
<html lang="en">
<script defer src="script/script.js"></script>
<%- include('./partials/head.ejs') %>

    <body class="regimg">
        <%- include('./partials/top-navbar.ejs') %>

            <section class="block vh-100 bg-image">
                <div class="mask d-flex align-items-center h-130 gradient-custom-3">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-130">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                <div class="card rounded-4">
                                    <div class="card-body p-3 rounded-4">
                                        <h1 class="reg text-center mb-1">Register</h1>
                                        <span class="text-danger">
                                            <%= message %>
                                        </span>
                                        <form class="formregister" id="formregister" action="/register" method="POST">
                                            <div class="input-control mb-1">
                                                <label class="form-label" for="username">Username</label>
                                                <input type="text" id="username" name="username"
                                                    class="form-control form-control-xl" />
                                                <small>Error message</small>
                                            </div>
                                            <div class="input-control mb-1">
                                                <label class="form-label" for="email">Your Email</label>
                                                <input type="text" id="email" name="email"
                                                    class="form-control form-control-xl" />
                                                <small>Error message</small>
                                            </div>
                                            <div class="input-control mb-1">
                                                <label class="form-label" for="number">Phone Number</label>
                                                <input type="text" id="number" name="number"
                                                    class="form-control form-control-xl" />
                                                <small>Error message</small>
                                            </div>

                                            <div class="input-control mb-1">
                                                <label class="form-label" for="password">Password</label>
                                                <input type="password" id="password" name="password"
                                                    class="form-control form-control-xl" />
                                                <small>Error message</small>
                                            </div>
                                            <div class="input-control mb-1">
                                                <label class="form-label" for="password">Confirm Password</label>
                                                <input type="password" id="password2" name="password2"
                                                    class="form-control form-control-xl" />
                                                <small>Error message</small>
                                            </div>

                                            <div class="d-flex justify-content-center">
                                                <button type="submit " id="submit"
                                                    class="btn btn-success btn-block btn-lg register-button text-body rounded-pill fw-bold">
                                                    Register
                                                </button>
                                            </div>

                                            <p class="text-center text-muted mb-0">
                                                Have already an account?
                                                <a href="/login" class="fw-bold text-body"><u class="fs-4">Login</u></a>
                                            </p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <%- include('./partials/bottom-navbar.ejs') %>
    </body>

</html>